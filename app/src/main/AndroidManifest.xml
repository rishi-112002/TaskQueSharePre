<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskQue"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.EditViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.DetailedViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.RoutineTaskViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.PriorityTaskViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.WorkTasksViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.AddTaskViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.HomePageViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>